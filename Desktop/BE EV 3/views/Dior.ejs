cart.style.borderRadius = '10px';
cart.style.boxShadow = '0 4px 8px rgba(0, 0, 0, 0.1)';
cart.style.display = 'block';
cart.style.zIndex = '1000';
cart.style.transition = 'right 0.5s ease';
