<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Key Register Page</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background: #f5f5f5;
            height: 100vh;
            display: flex;
        }

        .background {
            width: 70%;
            height: 100%;
            background: url('logo.png') no-repeat center center/cover;
            position: relative;
            opacity: 0; /* For animation */
        }

        .white-section {
            width: 35%;
            height: 100%;
            background: #ffffff;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            transform: translateX(100%); /* For animation */
        }

        .container {
            text-align: center;
            max-width: 400px;
            width: 70%;
            padding: 2.5rem 2rem;
            background: rgba(255, 255, 255, 0.9);
            border: 1px solid black;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            opacity: 0; 
            transform: scale(0.9); 
        }

        .logo img {
            width: 300px;
            margin-bottom: 1.5rem;
            opacity: 0; /* For animation */
        }

        h1 {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 1.5rem;
            color: black;
            opacity: 0; /* For animation */
        }

        .input-container {
            position: relative;
            margin-bottom: 1.5rem;
            opacity: 0; /* For animation */
            transform: translateY(20px);
        }

        .input-container input {
            width: 85%;
            padding: 1rem;
            padding-left: 3rem;
            border: 1px solid black;
            border-radius: 50px;
            font-size: 1rem;
            background: rgba(255, 255, 255, 0.8);
            color: #333;
            outline: none;
            transition: background 0.3s ease, box-shadow 0.3s ease, transform 0.2s;
        }

        .input-container input::placeholder {
            color: #999;
        }

        .input-container input:focus {
            background: #fff;
            box-shadow: 0 0 10px black;
            transform: scale(1.05);
        }

        .input-container i {
            position: absolute;
            top: 50%;
            left: 20px;
            transform: translateY(-50%);
            color: black;
            font-size: 1.2rem;
        }

        button {
            width: 100%;
            padding: 1rem;
            font-size: 1.2rem;
            background: black;
            border: none;
            border-radius: 50px;
            color: #fff;
            font-weight: bold;
            cursor: pointer;
            margin-top: 1rem;
            transition: transform 0.3s, background 0.3s, box-shadow 0.3s;
            opacity: 0; /* For animation */
            transform: translateY(20px);
        }

        button:hover {
            background: white ;
            color: black;
            border: 2px solid black;
            transform: scale(1.1);
            /* box-shadow: 0 0 15px black; */
        }

        .extra-links {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            margin-top: 1.5rem;
            opacity: 0; /* For animation */
        }

        .extra-links a {
            color: #999;
            font-size: 0.9rem;
            text-decoration: none;
            transition: color 0.3s;
        }

        .extra-links a:hover {
            color: black;
        }

        .footer {
            margin-top: 2rem;
            font-size: 0.8rem;
            color: #999;
            opacity: 0; /* For animation */
        }

        .footer a {
            color: black;
            text-decoration: none;
        }

        .footer a:hover {
            text-decoration: underline;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
</head>
<body>
    <div class="background"></div>
    <div class="white-section">
        <div class="container">
            <div class="logo">
                <!-- <img src="logo.png" alt="Logo"> -->
            </div>
            <h1>Create an Account</h1>
            <form id="registerForm" method="POST" action="/api/register">
                <div class="input-container">
                    <i class="fas fa-user"></i>
                    <input type="text" name="username" placeholder="Username" required>
                </div>
                <div class="input-container">
                    <i class="fas fa-envelope"></i>
                    <input type="email" name="uemail" placeholder="Email" required>
                </div>
                <div class="input-container">
                    <i class="fas fa-lock"></i>
                    <input type="password" name="password" placeholder="Password" required>
                </div>
                <button type="submit">Register</button>
            </form>
            <div class="extra-links">
                <a href="/login">Already have an account? Login</a>
            </div>
            <div class="footer">
                <p>
                    Â© 2024 Key. All Rights Reserved | Design by <a href="#">Gurman</a>
                </p>
            </div>
        </div>
    </div>

    <script>
        // GSAP Animations
        const tl = gsap.timeline();

        tl.fromTo(".background", { opacity: 0 }, { opacity: 1, duration: 1 })
          .fromTo(".white-section", { x: "100%" }, { x: "0%", duration: 1 }, "-=0.5")
          .fromTo(".container", { opacity: 0, scale: 0.9 }, { opacity: 1, scale: 1, duration: 1 }, "-=0.5")
          .fromTo(".logo img", { opacity: 0, y: -30 }, { opacity: 1, y: 0, duration: 0.6 }, "-=0.5")
          .fromTo("h1", { opacity: 0, y: -20 }, { opacity: 1, y: 0, duration: 0.6 }, "-=0.5")
          .fromTo(".input-container", { opacity: 0, y: 20 }, { opacity: 1, y: 0, duration: 0.6, stagger: 0.2 }, "-=0.5")
          .fromTo("button", { opacity: 0, y: 20 }, { opacity: 1, y: 0, duration: 0.6 }, "-=0.5")
          .fromTo(".extra-links", { opacity: 0, y: 20 }, { opacity: 1, y: 0, duration: 0.6 }, "-=0.5")
          .fromTo(".footer", { opacity: 0, y: 20 }, { opacity: 1, y: 0, duration: 0.6 }, "-=0.5");
    </script>
</body>
</html>
