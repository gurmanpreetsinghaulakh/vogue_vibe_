    <script>
        // GSAP Enhanced Entrance Animation
        gsap.fromTo(
            ".card",
            { opacity: 0, y: 50 },
            {
                opacity: 1,
                y: 0,
                duration: 0.8,
                stagger: 0.2,
                ease: "power3.out"
            }
        );
    
        // GSAP Hover Animation
        document.querySelectorAll('.card').forEach(card => {
            card.addEventListener('mouseenter', () => {
                gsap.to(card, { scale: 1.05, duration: 0.3 });
            });
            card.addEventListener('mouseleave', () => {
                gsap.to(card, { scale: 1, duration: 0.3 });
            });
        });
    
        // Smooth Transition for Search Bar
        const searchIcon = document.querySelector(".search-icon");
        const searchBar = document.querySelector(".search-bar");
    
        searchIcon.addEventListener("click", () => {
            searchBar.classList.toggle("open");
            if (searchBar.classList.contains("open")) {
                searchBar.querySelector("input").focus();
                gsap.fromTo(searchBar, { opacity: 0, y: -20 }, { opacity: 1, y: 0, duration: 0.5 });
            }
        });
    
        // Add to Cart functionality with opening animation
        const cartIcon = document.querySelector('.cart-icon');
const cart = document.createElement('div');
cart.style.position = 'fixed';
cart.style.top = '60px';
cart.style.right = '-350px';
cart.style.width = '300px';
cart.style.background = '#fff';
cart.style.padding = '15px';
cart.style.borderRadius = '10px';
cart.style.boxShadow = '0 4px 8px rgba(0, 0, 0, 0.1)';
cart.style.display = 'block';
cart.style.zIndex = '1000';
cart.style.transition = 'right 0.5s ease';
cart.innerHTML = `
    <h4>Cart</h4>
    <ul class="cart-list" style="list-style: none; padding: 0;"></ul>
    <button class="close-cart" style="margin-top: 10px; background: #f00; color: #fff; border: none; padding: 8px 15px; border-radius: 5px; cursor: pointer;">Close</button>
`;
document.body.appendChild(cart);

// Open cart when cart icon is clicked
cartIcon.addEventListener('click', () => {
    gsap.to(cart, { right: '50px', duration: 0.5 });
});

// Close cart button functionality
cart.querySelector('.close-cart').addEventListener('click', () => {
    gsap.to(cart, { right: '-350px', duration: 0.5 });
});

// Add items to cart when a product button is clicked
document.querySelectorAll('.card button').forEach(button => {
    button.addEventListener('click', () => {
        const card = button.closest('.card');
        const productName = card.querySelector('h3').textContent;
        const productPrice = card.querySelector('.price').textContent;
        const productImage = card.querySelector('img').src;

        // Open cart if it's not already open
        gsap.to(cart, { right: '50px', duration: 0.5 });

        // Add item to the cart list
        const cartList = cart.querySelector('.cart-list');
        const cartItem = document.createElement('li');
        cartItem.style.display = 'flex';
        cartItem.style.alignItems = 'center';
        cartItem.style.marginBottom = '10px';

        cartItem.innerHTML = `
                    <img src="${productImage}" alt="Product" style="width: 50px; height: 50px; object-fit: contain; margin-right: 10px; border: 1px solid #ccc; border-radius: 5px;">
                    <div>
                        <p style="margin: 0; font-size: 14px;">${productName}</p>
                        <p style="margin: 0; font-size: 12px; color: #555;">${productPrice}</p>
                    </div>
                    <button class="remove-btn" style="margin-left: auto; color: red; background: none; border: none; cursor: pointer;">Remove</button>
                `;
        cartList.appendChild(cartItem);
    
                // Animation for the new item added to cart
                gsap.fromTo(cartItem, { opacity: 0, y: -10 }, { opacity: 1, y: 0, duration: 0.3 });
    
                // Remove item functionality
                cartItem.querySelector('.remove-btn').addEventListener('click', () => {
                    gsap.to(cartItem, {
                        opacity: 0,
                        y: -10,
                        duration: 0.3,
                        onComplete: () => cartItem.remove(),
                    });
                });
            });
        });
    </script>
    
